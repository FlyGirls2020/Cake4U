<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_edit_categories">
    <RelativeLayout
        android:id="@+id/admin_edit_category_relative_layout_top"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="40dp">
        <Button
            android:id="@+id/admin_edit_category_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@color/colorAccent"

            android:gravity="center"
            android:textStyle="bold"
            android:text="back"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/admin_edit_category_relative_layout_top"
        android:id="@+id/admin_edit_category_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"
        android:src="@drawable/addcake1"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputs_layer1"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/admin_edit_category_image"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/admin_edit_category_product_name"

            android:textColorHint="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:layout_width="match_parent"
            android:hint="Product Name"
            android:textColor="@color/colorPrimaryDark"

            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>





    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/admin_category_edit_linear1"
        android:layout_below="@+id/inputs_layer1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Admin_update_current_category"
            android:layout_marginLeft="90dp"
            android:background="@drawable/admin_input_design"
            android:text="@string/update"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Admin_delete_current_category"
            android:gravity="center"
            android:background="@drawable/admin_input_design"
            android:textColor="@color/colorAccent"
            android:text="@string/delete"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>