<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:layout_marginTop="20dp"
        app:cardElevation="15dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_view_product_names"
        android:layout_width="match_parent"
        android:text="@string/product_name21"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"

        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/user_view_product_Images"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_below="@+id/user_view_product_names"
        android:src="@drawable/profile" />
    <TextView
        android:id="@+id/user_products_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textStyle="bold"

        android:layout_below="@+id/user_view_product_Images"
        />





</RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>