<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Seller_approval">
    <RelativeLayout
        android:id="@+id/R_admin_change_product_relative_layoutss_top"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="40dp">
        <Button
            android:id="@+id/R_admin_view_customer_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@color/colorAccent"

            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/backs1"
            android:textColor="@android:color/white"
            />

        <TextView

            android:id="@+id/R_admin_edit_cus_name"
            android:layout_width="322dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="Seller Approval"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"

            />
    </RelativeLayout>



    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/R_admin_view_customer_details1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.baoyz.swipemenulistview.SwipeMenuListView>
</LinearLayout>