<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerRegisterActivity">

    <TextView
        android:id="@+id/user_seller_head"
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:text="@string/seller_registration"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="25dp"
        android:layout_below="@+id/user_seller_head"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/user_seller_textInputLayout1"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/colorAccent"
            android:hint="UserName"
            android:id="@+id/seller_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="25dp"
        android:layout_below="@+id/user_seller_textInputLayout1"
        android:id="@+id/user_seller_textInputLayout2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/colorAccent"
            android:hint="Email Id"
            android:id="@+id/seller_email"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="25dp"
        android:layout_below="@+id/user_seller_textInputLayout2"
        android:id="@+id/user_seller_textInputLayout3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/colorAccent"
            android:hint="Password"
            android:id="@+id/seller_password"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_below="@+id/user_seller_textInputLayout3"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="50dp"
        android:text="@string/register"
        android:id="@+id/seller_register"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/input_design"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</RelativeLayout>